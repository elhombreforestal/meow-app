{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "react-app",
        "react-app/jest",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "jest/expect-expect": "off",
        "prettier/prettier": [
          "error",
          {
            "printWidth": 80,            
            "trailingComma": "none",
            "semi": true
          }
        ],
        "prefer-const": "error",
        "no-unused-vars": "off",
        "no-console": "warn",
        "no-nested-ternary": "error",
        "react/jsx-no-target-blank": [
          "error",
          {
            "allowReferrer": true
          }
        ]
      }
}
